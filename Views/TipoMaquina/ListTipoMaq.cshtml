@model List<TipoMaquina>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Lista de Tipo Máquina</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tipoMaquina in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => tipoMaquina.IdTipoMaq)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => tipoMaquina.Nombre)
                    </td>
                    <td>
                        <form controller="TipoMaquina" method="post">
                            <input type="hidden" name="idTipoMaq" asp-for="@tipoMaquina.IdTipoMaq" />
                            <a asp-action="UpdateTipoMaq" class="btn btn-sm btn-danger" asp-route-id="@tipoMaquina.IdTipoMaq">Modificar</a>
                            <input type="submit" value="Eliminar" asp-action="DeleteTipoMaq" class="btn btn-sm btn-primary" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
