@{
}
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Modificar ejercicio</h1>
    <form asp-action="UpdateEjercicio" controller="Ejercicio" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="idEjercicio">Id ejercicio:</label>
            <input readonly type="text" asp-for="IdEjercicio" class="form-control" id="idEjercicio" name="idEjercicio">
            <span asp-validation-for="IdEjercicio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="idTipoMaq">IdTipoMaq:</label>
            <select asp-for="IdTipoMaq" asp-items="Model.TipoMaqsPosibles" class="form-control">
                <option value="">Seleccione un tipo de máquina</option>
            </select>
            <span asp-validation-for="IdTipoMaq" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label for="descripcion">Descripción:</label>
            <input type="text" asp-for="Descripcion" class="form-control" id="descripcion">
            <span asp-validation-for="Descripcion" class="text-danger"></span>

        </div>

        <button type="submit" class="btn btn-primary">Modificar ejercicio</button>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
