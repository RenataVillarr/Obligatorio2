@model SocioRutina
@{
    ViewData["Title"] = "Agregar Socio Rutina";
}
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Agregar Socio Rutina</h1>
    <form asp-action="AddSocioRutina" controller="SocioRutina" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label for="idRutina">Id Rutina:</label>
            <select asp-for="IdRutina" asp-items="Model.RutinasPosibles" class="form-control">
                <option value="@null">Seleccione una rutina</option>
            </select>
            <span asp-validation-for="IdRutina" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="idSocio">Id Socio:</label>
            <select asp-for="IdSocio" asp-items="Model.SociosPosibles" class="form-control">
                <option value="@null">Seleccione un socio</option>
            </select>
            <span asp-validation-for="IdSocio" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="fechaInicio">Fecha inicio:</label>
            <input type="date" asp-for="FechaInicio" class="form-control" id="fechaInicio" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="fechaFin">Fecha fin:</label>
            <input type="date" asp-for="FechaFin" class="form-control" id="fechaFin" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="calificacion">Calificación:</label>
            <input type="number" asp-for="Calificacion" class="form-control" id="calificacion" />
            <span asp-validation-for="Calificacion" class="text-danger"></span>
        </div>

        <h1 class="display-4" style="font-size:100%;font-weight:bold;margin:10px auto;color:red">@ViewBag.ErrorMessage</h1>

        <button type="submit" class="btn btn-primary">Agregar Socio Rutina</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
