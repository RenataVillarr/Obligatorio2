@model List<Local>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
    <h1 class="display-4" style="font-size: 40px">Lista de Locales</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Ciudad</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Nombre Responsable</th>
                <th>Telefono Responsable</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var locales in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => locales.IdLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => locales.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => locales.Ciudad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => locales.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => locales.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => locales.NomRespon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => locales.TeleRespon)
                    </td>
                    <td>
                        <form controller="Local" method="post">
                            <input type="hidden" name="idLocal" asp-for="@locales.IdLocal" />
                            <a asp-action="UpdateLocal" class="btn btn-sm btn-danger" asp-route-id="@locales.IdLocal">Modificar</a>
                            <input type="submit" value="Eliminar" asp-action="DeleteLocal" class="btn btn-sm btn-primary" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
